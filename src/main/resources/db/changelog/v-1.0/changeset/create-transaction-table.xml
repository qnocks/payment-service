<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="2" author="Roman Ostanin">
        <createTable tableName="transaction">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" />
            </column>
            <column name="external_id" type="VARCHAR(100)" />
            <column name="core_id" type="VARCHAR(100)" />
            <column name="provider_id" type="BIGINT">
                <constraints references="payment_provider(id)" foreignKeyName="fk_payment_provider_id" />
            </column>
            <column name="status" type="VARCHAR(10)" />
            <column name="replenishment_status" type="VARCHAR(10)" />
            <column name="amount" type="NUMERIC(12, 2)" />
            <column name="currency" type="VARCHAR(3)" />
            <column name="commission_amount" type="NUMERIC(12, 2)" />
            <column name="commission_currency" type="VARCHAR(3)" />
            <column name="user_id" type="VARCHAR(100)" />
            <column name="external_date" type="TIMESTAMP" />
            <column name="created_at" type="TIMESTAMP" />
            <column name="replenish_after" type="TIMESTAMP" />
            <column name="additional_data" type="TEXT" />
        </createTable>
    </changeSet>

</databaseChangeLog>